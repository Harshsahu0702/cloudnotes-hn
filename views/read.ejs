            margin: 0.5rem 0; 
            color: #0f172a; 
            font-weight: 700; 
            font-size: 0.95rem; 
            text-align: center;
            word-break: break-word;
            line-height: 1.3;
            flex-shrink: 0;
        }
        .pdf-meta { 
            display: flex;
            gap: 8px;
            align-items: center;
            color: #64748b;
            font-size: 0.85rem;
            margin: 0.5rem 0;
            justify-content: center;
            flex-wrap: wrap;
            flex-shrink: 0;
        }
        .pdf-actions { 
            display: flex;
            justify-content: center;
            gap: 0.5rem;
            margin-top: auto;
            flex-shrink: 0;
        }
        .pdf-actions .btn {
            border-radius: 8px;
            font-weight: 700;
            text-decoration: none;
            padding: 0.5rem 1rem;
            font-size: 0.8rem;
            display: inline-flex;
            align-items: center;
            gap: 4px;
            flex: 1;
            justify-content: center;
        }
        
