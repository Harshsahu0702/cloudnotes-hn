            .browse-search-inner i {
                font-size: 1.1rem;
                color: #3b82f6;
                flex-shrink: 0;
            }
            
            .browse-search-inner input {
                flex: 1;
                padding: 12px 16px;
                border-radius: 12px;
                background: rgba(248, 250, 252, 0.9);
                border: 1px solid rgba(59, 130, 246, 0.15);
                font-size: 1rem;
